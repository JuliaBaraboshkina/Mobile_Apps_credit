<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Переутомление (Ортостатическая проба)"
        android:textColor="#930D02"
        android:textSize="38dp">

    </TextView>

    <TextView
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="10dp"
        android:text="Для прохождения теста необходимо иметь возможность лечь на 5 минут. Время прохождения теста около 10-15 минут"
        android:textColor="#0B0000"
        android:textSize="20dp">

    </TextView>

    <ImageView
        android:id="@+id/mark"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/ex_mark"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="20dp"
        android:text="Тест"
        android:textColor="#930D02"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="20dp"
        android:text="День вашего рождения:"
        android:textColor="#0B0000"
        android:textSize="30dp"></TextView>

    <Spinner
        android:id="@+id/SpinnerFeedbackType"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:entries="@array/feedbacktypelist"
        android:prompt="@string/feedbacktype1"></Spinner>

    <Spinner
        android:id="@+id/Month"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="190dp"
        android:layout_marginTop="-55dp"
        android:entries="@array/monthlist"
        android:prompt="@string/month"></Spinner>

    <Spinner
        android:id="@+id/Year"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginLeft="470dp"
        android:layout_marginTop="-55dp"
        android:entries="@array/yearlist"
        android:prompt="@string/year"></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Пол:"
        android:textColor="#0B0000"
        android:textSize="30dp"></TextView>

    <Spinner
        android:id="@+id/Pol"

        android:layout_width="190dp"
        android:layout_height="55dp"
        android:entries="@array/pollist"
        android:prompt="@string/feedbacktype1"></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" 1. Необходимо лечь и лежать 5 минут почти без движений"
        android:textColor="#0B0000"
        android:textSize="25dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text=" 2. Посчтитать пульс в течение минуты"
        android:textColor="#0B0000"
        android:textSize="25dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text=" 3. Введите пульс в положении лежа:"
        android:textColor="#0B0000"
        android:textSize="25dp">

    </TextView>

    <EditText
        android:id="@+id/entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_marginLeft="445dp"
        android:layout_marginTop="-35dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="25dp"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="4. Встать и стоять почти без движений 5 минут."
        android:textColor="#0B0000"
        android:textSize="25dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="5. Посчитать пульс в течение минуты."
        android:textColor="#0B0000"
        android:textSize="25dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text=" 6. Введите пульс в положении стоя:"
        android:textColor="#0B0000"
        android:textSize="25dp"></TextView>

    <EditText
        android:id="@+id/entry2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_marginLeft="435dp"
        android:layout_marginTop="-35dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="25dp"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text=" 7. Нажмите (Ввод). Тест завершен!"
        android:textColor="#0B0000"
        android:textSize="25dp"></TextView>

    <Button
        android:id="@+id/transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:onClick="Click"
        android:text="Ввод"
        android:textSize="25dp" />

</LinearLayout>